@model library_management_system.Models.MusicDisc

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = @Localizer["Add New Music Disc"];
	ViewData["ActiveNav"] = "Loans";
}

<div class="mb-3">
	<h1 class="display-4">@Localizer["Add New Music Disc"]</h1>
</div>

<form method="post" asp-controller="MusicDiscs" asp-action="Create" asp-route-loanId="@ViewData["LoanId"]">
	<div class="row">
		<div class="col-12 col-md-6 mb-3">
			<label asp-for="Title" class="form-label">
				@Html.DisplayNameFor(model => model.Title) *
			</label>
			<input asp-for="Title" class="form-control" type="text" required />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="col-12 col-md-6 mb-3">
			<label asp-for="Artist" class="form-label">
				@Html.DisplayNameFor(model => model.Artist) *
			</label>
			<input asp-for="Artist" class="form-control" type="text" required />
			<span asp-validation-for="Artist" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-12 col-md-6 mb-3">
			<label asp-for="Version" class="form-label">
				@Html.DisplayNameFor(model => model.Version)
			</label>
			<input asp-for="Version" class="form-control" type="text" />
			<span asp-validation-for="Version" class="text-danger"></span>
		</div>
		<div class="col-12 col-md-6 mb-3">
			<label asp-for="EAN" class="form-label">
				@Html.DisplayNameFor(model => model.EAN)
			</label>
			<input asp-for="EAN" class="form-control" type="text" />
			<span asp-validation-for="EAN" class="text-danger"></span>
		</div>
	</div>

	<div class="row">
		<div class="col-12 col-md-6">
			<button type="submit" class="btn btn-primary"><i class="bi bi-disc me-2" aria-hidden="true"></i>
				@Localizer["Create Music Disc"]</button>
		</div>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
